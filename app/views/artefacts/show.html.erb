<% content_for :title_bar do %>
  <h1>
    <%= link_to content_tag(:i, '', class: "fa fa-chevron-left"), artefacts_path, title: 'back' %> <%= @artefact.name %>
    <%= content_tag :div, class: 'pull-right' do %>
      <%= link_to 'Edit Artefact', edit_artefact_path(@artefact), class: 'btn btn-default' %>
      <%= link_to 'Destroy', @artefact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-danger' %>
    <% end if user_signed_in? %>
  </h1>
<% end %>

<div class="row">
  <div class="col-sm-6">
<p>
  <strong>Dez:</strong>
  <%= @artefact.dez %><%= @artefact.dez_index %>
</p>


<%= content_tag :p do %>
  <%= @artefact.artefact_identificators.map{|ai| link_to(ai.excavation_name, ai.excavation)}.join(', ').html_safe %>
<% end if @artefact.artefact_identificators.any? %>

<p>
  <strong>Dimensions:</strong>
  <%= @artefact.dimensions %>
</p>

<p>
  <strong>Dimensions type:</strong>
  <%= @artefact.dimensions_type %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @artefact.weight %>
</p>

<p>
  <strong>In exhibition:</strong>
  <%= @artefact.in_exhibition %>
</p>



    <p><%= @artefact.terms.map{|t| link_to(t.prefered_term.name, t)}.join(', ').html_safe %></p>
    <p style="font-size: 80%"><%= truncate(@artefact.comments.last.content) if @artefact.comments.any? %></p>

restorations
dispositions


<% if user_signed_in? %>
<p>
  <strong>Creator:</strong>
  <%= @artefact.creator.email %>
</p>

<p>
  <strong>Updater:</strong>
  <%= @artefact.updater.email %>
</p>
<% end %>

</div>
</div>
