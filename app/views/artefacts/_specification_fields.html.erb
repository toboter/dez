<%= content_tag :div, class: 'nested-fields' do %>
  <% unless f.object.new_record? %>
  	<%= f.object.vocabulary.self_and_ancestors.reverse.map{|t| link_to t.root? ? content_tag(:span, t.prefered_term.name, style: 'font-weight: bold') : t.prefered_term.name, t }.join(' > ').html_safe %>
  	<%= content_tag :span, link_to_remove_association("remove", f), class: 'remove-link' %>
  <% end %>
  <% collection = hierarchy.descendants %>
  <%= f.association :vocabulary, label: "#{hierarchy.prefered_term.name} term #{content_tag :span, link_to_remove_association("remove", f), class: 'remove-link'}".html_safe, collection: collection, label_method: :name_for_select, value_method: :id, include_blank: true if f.object.new_record? %>

<% end %>


