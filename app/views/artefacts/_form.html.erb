<div class="row">
  <%= simple_form_for @artefact, html: { class: 'form-horizontal' },
    wrapper: :horizontal_form,
    wrapper_mappings: {
      check_boxes: :horizontal_radio_and_checkboxes,
      radio_buttons: :horizontal_radio_and_checkboxes,
      file: :horizontal_file_input,
      boolean: :horizontal_boolean
    } do |f| %>
    
    <%= f.error_notification %>
    
    <div class="col-sm-6">
      <%= f.input :dez %>
      <%= f.input :dez_index %>
      <%= f.input :dimensions %>
      <%= f.input :dimensions_type %>
      <%= f.input :weight %>
      <%= f.input :in_exhibition %>
    
      <%= content_tag :div, id: 'artefact_identificators' do %>
        <%= f.simple_fields_for :artefact_identificators do |ident| %>
          <%= render 'artefact_identificator_fields', f: ident %>
        <% end %>
        <div class="add-fields">
          <%= link_to_add_association 'add identificator', f, :artefact_identificators, class: 'col-sm-offset-3' %>
        </div>
      <% end %>

      <%= content_tag :div, id: 'specifications' do %>
        <%= f.simple_fields_for :specifications do |ident| %>
          <%= render 'specification_fields', f: ident %>
        <% end %>
        <div class="add-fields">
          <%= link_to_add_association 'add specification', f, :specifications, class: 'col-sm-offset-3' %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-6">
      <%= content_tag :div, id: 'dispositions' do %>
        <%= f.simple_fields_for :dispositions do |ident| %>
          <%= render 'disposition_fields', f: ident %>
        <% end %>
        <div class="add-fields">
          <%= link_to_add_association 'add disposition', f, :dispositions, class: 'col-sm-offset-3' %>
        </div>
      <% end %>

      <%= content_tag :div, id: 'restorations' do %>
        <%= f.simple_fields_for :restorations do |ident| %>
          <%= render 'restoration_fields', f: ident %>
        <% end %>
        <div class="add-fields">
          <%= link_to_add_association 'add restoration', f, :restorations, class: 'col-sm-offset-3' %>
        </div>
      <% end %>

      <%= content_tag :div, id: 'comments' do %>
        <%= f.simple_fields_for :comments do |ident| %>
          <%= render 'comment_fields', f: ident %>
        <% end %>
        <div class="add-fields">
          <%= link_to_add_association 'add note', f, :comments, class: 'col-sm-offset-3' %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-12">
      <%= f.button :submit, class: 'col-sm-offset-3', style: 'margin-top:20px;' %>
    </div>
  <% end %>
</div>