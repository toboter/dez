<%= content_tag :div, class: 'nested-fields' do %>
  <%= f.input :content, label: "Note #{content_tag :span, link_to_remove_association("remove", f), class: 'remove-link'}".html_safe %>
  <%= f.input :language, collection: ["de-DE", "en-US", "fr-FR"] %>
  <div class="col-sm-offset-3" style='padding-left: 8px'>
  	<div class="checkbox">
  	  <%= f.input_field :prefered, as: :boolean, inline_label: 'Prefered note'  %>
	</div>
  </div>
<% end %>
