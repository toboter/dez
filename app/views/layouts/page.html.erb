<% content_for :content do %>
<div class="container-fluid" style="margin-bottom:20px; padding-bottom:10px; padding-top:70px; background: #f5f5f5; border-bottom: 1px solid #e6e6e6;">
  <div class="container">
  	<%= yield(:title_bar) %>
  </div>
</div>

<div id="wrap">
  <div class="container">

    <%= content_tag :div, class: "notifier", style: '' do %>
      <%= content_tag :div, notice, class: "alert alert-info" if notice %>
      <%= content_tag :div, alert, class: "alert alert-danger" if alert %>
    <% end if notice || alert %>

    <div style="margin-top: 20px;">
      <%= yield %>
    </div>

  </div>
  <div id="push"></div>
</div>


<% end %>

<%= render :template => 'layouts/application' %>